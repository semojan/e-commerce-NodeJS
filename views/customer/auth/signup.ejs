<%- include("../../shared/includes/head", {pageTitle: "Signup"}) %>

<link rel="stylesheet" href="/styles/forms.css">
<link rel="stylesheet" href="/styles/auth.css">
</head>
<body>
    <%- include("../../shared/includes/header") %>
    <main>
        <h1>Create New Account</h1>
        <% if(inputData.message) { %>
            <section class="alert">
                <h2>Invalid Input</h2>
                <p><%= inputData.message %></p>
            </section>
        <% } %>
        <form action="/signup" method="post">
            <!-- <input type="hidden" name="_csrf" value="<%= locals.csrfToken %>"> -->
            <p>
                <label for="email">E-Mail</label>
                <input type="email" name="email" id="email" value="<%= inputData.email %>" required>
            </p>
            <p>
                <label for="confirm-email">Confirm E-Mail</label>
                <input type="email" name="confirm-email" id="confirm-email" value="<%= inputData.confirmEmail %>" required>
            </p>
            <p>
                <label for="password">Password</label>
                <input type="password" name="password" id="password" value="<%= inputData.password %>" minlength="6" required>
            </p>
            <hr/>
            <p>
                <label for="fullname">Full Name</label>
                <input type="text" name="fullname" id="fullname" value="<%= inputData.fullname %>" required>
            </p>
            <p>
                <label for="street">Street</label>
                <input type="text" name="street" id="street" value="<%= inputData.street %>" required>
            </p>
            <p>
                <label for="postal">Postal Code</label>
                <input type="text" name="postal" id="postal" value="<%= inputData.postal %>" minlength="5" maxlength="5" required>
            </p>
            <p>
                <label for="city">City</label>
                <input type="text" name="city" id="city" value="<%= inputData.city %>" required>
            </p>
            
            <button class="btn">Create Account</button>
            <p id="switch-form"><a href="/login">Login instead</a></p>
        </form>
    </main>
    
<%- include("../../shared/includes/footer") %>